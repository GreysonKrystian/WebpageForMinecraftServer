@page
@model IndexModel
@{
    ViewData["Title"] = "Edycja profilu";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6 offset-3">
        <h2 class="text-center">@ViewData["Title"]</h2>
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mt-5">
                <input asp-for="Email" class="form-control" disabled/>
                <label asp-for="Email" class="form-label"></label>
            </div>
            <div class="form-floating mt-3">
                <input asp-for="ForumUsername" class="form-control" disabled/>
                <label asp-for="ForumUsername" class="form-label"></label>
            </div>
            <div class="form-floating mt-3">
                <input asp-for="Input.PhoneNumber" class="form-control "/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary mt-3">Zapisz dane</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
