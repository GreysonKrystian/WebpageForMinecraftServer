@using System.Security.Claims
@using MinecraftServerWeb.Utility
@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}
<style>
    .image {
        background-color: lightblue;
        border: 1px solid #000000;
        text-align: center;
        height: 200px;
    }
    .side {
        background-color: lightgoldenrodyellow;
        border: 1px solid #000000;
        text-align: center;
        width: 100%;
        height: 100%;
    }
    .center {
        background-color: lightpink;
        border: 1px solid #000000;
        text-align: center;
    }

</style>
<div id="content-wrapper" class="d-flex flex-column">
    <!-- Server Logo -->
    <div class="container-full border">
        <div class="image"> SERVER BANNER </div>
    </div>
    <!-- Server Banner -->
    <div class="text-center">
        <h2 class="display-4">Welcome to our server</h2>
        <img src="https://api.loohpjames.com/serverbanner.png?ip=2b2t.org" class="img-fluid" alt="server banner" style="padding-top: 5px; width: auto; height: 100px"/>
    </div>
    <br/>
    <!-- Title -->
    <div class="text-center">
        <h3 class="display-5">announcements</h3>
    </div>
    <div class="d-xxl-grid border">
        <div class="row">
            <!-- Announcements -->
            <div class="col-9">
                @foreach (Announcement post in Model.Announcements) // TODO do maximum posts per page
                {
                    User? author = Model.Users.FirstOrDefault(e => e.Id == post.Author.Id);
                    <div class="row ">
                        <div class="col-2 text-center pe-1 mt-3 mb-3">
                            <div class="card border-start border-1 shadow h-100 py-2 me-1">
                                <img src="https://source.unsplash.com/user/c_v_r/400x400" class="img-fluid rounded mx-auto d-block mb-2"
                                     style="padding-top: 5px; width: auto; height: 100px" alt="image of user"/>
                                <div class="mt-2 badge bg-primary text-wrap"> @author.ForumNickname </div>
                                <div class="mt-2 badge bg-danger text-wrap"> @author.Rank </div>
                                <div class="mt-2 badge bg-secondary text-wrap"> <p>Dodano:</p> <p>@post.DateCreated.ToString("HH:mm dd/MM/yyyy") </p></div>
                            </div>
                        </div>
                        <div class="col-10 border my-2 ">
                            <h5 class="display-6 mt-2 center">
                                @post.Title
                            </h5>
                            @if (post.Description != null)
                            {
                                <p class="form-control mt-5 text-capitalize text-primary ">
                                    @post.Description
                                </p>
                            }
                            <!-- content of Announcements -->
                            @if (post.Content.Split(" ").Length > 90)
                            {

                                <p class="form-control" readonly>
                                    @String.Join(" ", post.Content.Split(" ").Take(90))....
                                    <a class="link-primary fw-bold">czytaj całość</a>
                                </p>
                            }
                            else
                            {
                                <p class="form-control" readonly>
                                    @post.Content
                                </p>
                            }
                            <a class="link-primary fw-bold"> komentarze </a>
                        </div>
                    </div>
                }
            </div>
            <!-- Side panel-->
            <div class="col-3">
                <br/>
                <div class="row">
                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="py-2 me-1">
                        <partial name="_LoginPanel" for="@Model.LoginModel"/>
                    </div>
                }
                else
                {
                    <div class="card border-start border-1 shadow h-100 py-2 me-1">
                        <div class="card-header py-3">
                            <h5 class="fw-bold text-primary">
                                Zalogowano jako:
                            </h5>
                            <h6 class="ps-2">
                                @User.Identity.Name;
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="list-group">
                                <a href="#" class="list-group-item list-group-item-action">
                                    Zarządzanie Kontem 
                                </a>
                                <a href="#" class="list-group-item list-group-item-action">
                                    Panel Gracza
                                </a>
                                <a href="#" class="list-group-item list-group-item-action">
                                    Lorem ipsum
                                </a>
                                <a href="#" class="list-group-item list-group-item-action">
                                    Porta ac consectetur ac
                                </a>
                            </div>
                        </div>
                    </div>
                }
                </div>
            </div>
            <div class="row">
                <div class="col-3 m-3">
                @if (User.IsInRole(SD.RoleOwner))
                {
                    
                        <a asp-controlle0r="Announcement" asp-action="Create" class="btn btn-success mb-2"> Dodaj ogłoszenie</a>
                    
                }
                </div>
            <div class="col-6">
                <div class="card-header float-end mt-3">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <a asp-action="Index" asp-route-pageId="@i" class="link-primary m-2"> @i </a>
                    }
                </div>
            </div>
            </div>
        </div>
    </div>
</div>
