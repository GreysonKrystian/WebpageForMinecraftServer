@model MinecraftServerWeb.ViewModels.CreateAnnouncementViewModel

@{
    ViewData["Title"] = "Edycja Ogłoszenia";
}
<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit" asp-controller="Announcement" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label"> Wysłać ponownie na serwer discord?</label>
                <input type="checkbox" name="PostToDiscord" value="true" checked/>           
                </div>
            <div class="form-group">
                <label asp-for="Announcement.Title" class="control-label"> Tytuł </label>
                <input asp-for="Announcement.Title" class="form-control" />
                <span asp-validation-for="Announcement.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Announcement.Description" class="control-label"> Opis </label>
                <textarea asp-for="Announcement.Description" rows="3" class="form-control"> </textarea>
                <span asp-validation-for="Announcement.Description" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Announcement.PostId"/>
            <input type="hidden" asp-for="Announcement.AuthorId" />
            <div class="form-group">
                <label asp-for="Announcement.Content" class="control-label"> Treść Ogłoszenia </label>
            <textarea asp-for="Announcement.Content" rows="20" class="form-control" required data-error="Wprowadź tekst"></textarea>
                <span asp-validation-for="Announcement.Content" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Potwierdź" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-warning">Powrót do ogłoszeń</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
